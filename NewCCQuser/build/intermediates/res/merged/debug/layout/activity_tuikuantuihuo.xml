<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@color/color_red" >

                <LinearLayout
                    android:id="@+id/line_back"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="center" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/wleft" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="退款/退货"
                    android:textColor="@color/color_white"
                    android:textSize="20sp" />
            </RelativeLayout>

            <RadioGroup
                android:id="@+id/tabs_rg"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="6dp" >

                <RadioButton
                    android:id="@+id/radio_huanhuo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@color/transparent"
                    android:button="@null"
                    android:drawableLeft="@drawable/selector_fapiao"
                    android:drawablePadding="8dp"
                    android:singleLine="true"
                    android:text="换货"
                    android:textColor="@color/color_text_grey"
                    android:textSize="13sp" />

                <RadioButton
                    android:id="@+id/radio_tuihuo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@color/transparent"
                    android:button="@null"
                    android:drawableLeft="@drawable/selector_fapiao"
                    android:drawablePadding="8dp"
                    android:singleLine="true"
                    android:text="退货"
                    android:textColor="@color/color_text_grey"
                    android:textSize="13sp" />

                <RadioButton
                    android:id="@+id/radio_tuikuan"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_marginBottom="6dp"
                    android:background="@color/transparent"
                    android:button="@null"
                    android:drawableLeft="@drawable/selector_fapiao"
                    android:drawablePadding="8dp"
                    android:singleLine="true"
                    android:text="退款"
                    android:textColor="@color/color_text_grey"
                    android:textSize="13sp" />
            </RadioGroup>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/color_line_grey" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="手机号"
                    android:textColor="@color/color_text_black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入您的手机号"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:textColor="@color/color_text_black"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_line_grey" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="申请数量"
                    android:textColor="@color/color_text_black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_shuliang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="4"
                    android:textColor="@color/color_text_black"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/color_line_grey" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="5dp"
                android:background="@color/color_line_grey" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="问题描述"
                    android:textColor="@color/color_text_black"
                    android:textSize="16sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/color_line_grey" />

                <EditText
                    android:id="@+id/et_miaoshu"
                    android:layout_width="fill_parent"
                    android:layout_height="120dip"
                    android:layout_margin="12dip"
                    android:background="@drawable/kkk"
                    android:textColor="@color/color_text_black"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_tijiao"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_alignParentBottom="true"
            android:background="@color/color_red"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/color_white"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>