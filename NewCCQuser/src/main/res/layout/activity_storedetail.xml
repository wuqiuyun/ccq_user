<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relay_lunbo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ccj.yun28.com.lunbotu.ImageCycleView
            android:id="@+id/ad_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/banner" />

        <TextView
            android:id="@+id/tv_new_pro"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/clearbg"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textColor="@color/color_white"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_text_black"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="8dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="抢餐热度"
                android:textColor="@color/color_white"
                android:textSize="16sp"
                android:layout_marginRight="8dp" />

            <ccj.yun28.com.view.star.StarLinearLayout
                android:id="@+id/starsLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/tv_xfmd"
                android:layout_width="80dip"
                android:layout_height="30dip"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/yellowsure"
                android:gravity="center"
                android:text="快捷买单"
                android:textColor="@color/color_white"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="已售："
                android:textColor="@color/color_text_grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_ccq_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/color_text_grey"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:singleLine="true"
                android:text="抢餐人气点："
                android:textColor="@color/color_text_grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_ccq_renqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/color_text_grey"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="服务电话："
                android:textColor="@color/color_text_grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/callphone"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/color_text_grey"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="地址："
                android:textColor="@color/color_text_grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_adress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/color_text_grey"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_daohang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/map" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_pinjia"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/color_white"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:drawableLeft="@drawable/meyellow"
            android:drawablePadding="5dp"
            android:text="用户评价"
            android:textColor="@color/color_text_black"
            android:textSize="16sp" />

        <ccj.yun28.com.view.star.StarLinearLayout
            android:id="@+id/pinjia_starsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tv_pingjia_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/right"
            android:gravity="right"
            android:text="0条评价"
            android:textColor="@color/color_text_black"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="6dp"
        android:background="@color/color_line_grey" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_line_grey" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:text="商家图文介绍"
                android:textColor="@color/color_text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_store_pic_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/right"
                android:text="更多"
                android:textColor="@color/color_text_black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_pic_first"
                android:layout_width="110dip"
                android:layout_height="80dip"
                android:layout_marginLeft="8dp"
                android:background="@drawable/xinpin"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_pic_second"
                android:layout_width="110dip"
                android:layout_height="80dip"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/xinpin"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_pic_third"
                android:layout_width="110dip"
                android:layout_height="80dip"
                android:layout_marginRight="8dp"
                android:background="@drawable/xinpin"
                android:scaleType="fitXY" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="商家推荐"
        android:textColor="@color/color_text_black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_noproduct"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="@color/color_white"
        android:gravity="center"
        android:text="掌柜是新来的，还来不及上架商品哦~ \n 要不我再催催"
        android:textColor="@color/color_text_black"
        android:textSize="16sp"
        android:visibility="gone" />

</LinearLayout>