<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:paddingBottom="15dp" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:background="@color/color_line_grey" />

    <TextView
        style="@style/text_normal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="上传基本图片"
        android:textColor="@color/color_text_black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_id_front_iv"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/profiley" />

                <Button
                    android:id="@+id/img_id_front_btn"
                    android:layout_width="110dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/sck"
                    android:gravity="center"
                    android:text="上传正面"
                    android:textColor="@color/color_red" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_id_back_iv"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/fanmy" />

                <Button
                    android:id="@+id/img_id_back_btn"
                    android:layout_width="110dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/sck"
                    android:text="上传反面"
                    android:textColor="@color/color_red" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_license_iv"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:src="@drawable/yyzz" />

            <Button
                android:id="@+id/img_license_btn"
                android:layout_width="110dp"
                android:layout_height="33dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/sck"
                android:text="营业执照"
                android:textColor="@color/color_red" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:background="@color/color_line_grey" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/text_normal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="上传商家相片"
            android:textColor="@color/color_text_black"
            android:textSize="16sp" />

        <TextView
            style="@style/text_caption_normal"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="可登录商家APP或PC修改"
            android:textColor="@color/color_text_grey" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_merchant_first_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/mrtpy" />

            <Button
                android:id="@+id/img_merchant_first_btn"
                android:layout_width="90dp"
                android:layout_height="34dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/sck"
                android:text="上传"
                android:textColor="@color/color_red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_merchant_second_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/mrtpy" />

            <Button
                android:id="@+id/img_merchant_second_btn"
                android:layout_width="90dp"
                android:layout_height="34dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/sck"
                android:text="上传"
                android:textColor="@color/color_red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_merchant_third_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/mrtpy" />

            <Button
                android:id="@+id/img_merchant_third_btn"
                android:layout_width="90dp"
                android:layout_height="34dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/sck"
                android:text="上传"
                android:textColor="@color/color_red" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:background="@color/color_line_grey" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/text_normal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="上传厨房相片"
            android:textColor="@color/color_text_black"
            android:textSize="16sp" />

        <TextView
            style="@style/text_caption_normal"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="干净卫生, 是我们生活的追求"
            android:textColor="@color/color_text_grey" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_kitchen_first_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/mrtpy" />

            <Button
                android:id="@+id/img_kitchen_first_btn"
                android:layout_width="90dp"
                android:layout_height="34dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/sck"
                android:text="上传"
                android:textColor="@color/color_red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_kitchen_second_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/mrtpy" />

            <Button
                android:id="@+id/img_kitchen_second_btn"
                android:layout_width="90dp"
                android:layout_height="34dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/sck"
                android:text="上传"
                android:textColor="@color/color_red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_kitchen_third_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/mrtpy" />

            <Button
                android:id="@+id/img_kitchen_third_btn"
                android:layout_width="90dp"
                android:layout_height="34dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/sck"
                android:text="上传"
                android:textColor="@color/color_red" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>