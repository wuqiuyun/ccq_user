<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/dklj"
        android:orientation="vertical"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/viphg"
            android:layout_marginTop="12dp" />
        <TextView
            android:id="@+id/tv_viptext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dip"
            android:lineSpacingExtra="2dp"
            android:text="亲爱哒，棒棒哒，你已经是VIP啦。现在成为“三年VIP会员”就能免费升级为“终身VIP会员”，这就意味着终身都可以吃霸王餐，想想都激动啊！"
            android:textColor="@color/color_text_black" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_line_grey" />

        <LinearLayout
            android:id="@+id/line_anniu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_qiangquan"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="先去抢券了"
                android:textColor="@color/color_text_black"
                android:textSize="14sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="40dp"
                android:background="@color/color_line_grey" />

            <TextView
                android:id="@+id/tv_shengjizhongshen"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="升级终身VIP"
                android:textColor="@color/color_red"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>